/* CRERAR UN PROGRAMA QUE MUESTRE EL SIGUIENTE MENÚ:
1: SUMA DE N NUMEROS
2: TABLA DE MULTIPLICAR
3: MAYOR DE  3 NUMEROS
4: PROMEDIO DE N NÚMEROS
5: TERMINAR

*/
// DECLARACIÓN DE VARIBLES DEL PROGRAMA PRINCIPAL (VARIABLES GLOBALES)
ENTERO OP, N, SUMA, N1, N2, N3, MAYOR
CARACTER DETENER
REAL PROM


//SUBPROGRAMAS
FUNCION SUMANUMEROS(ENTERO CN): ENTERO
	ENTERO AC, I, NRO
INICIO
	AC <- 0
	PARA I <- 1 HASTA CN HAGA
		ESCRIBA "DIGITE EL NUMERO ", I, ": "
		LEA NRO
		AC <- AC + NRO
	FIN PARA
	RETORNE AC
FIN
// ----------------------------------------------------------------------------
PROCEDIMIENTO TABLAMUL(ENTERO MULT)
	ENTERO I, PRODUCTO
INICIO
	PARA I <- 1 HASTA 10 HAGA
		LLAMAR COLOR_TEXTO(I)
		PRODUCTO <- I * MULT
		ESCRIBA I, " X ", MULT, " = ", PRODUCTO
		LLAMAR NUEVA_LINEA()
	FIN PARA
	LLAMAR COLOR_TEXTO(15)
FIN 
//-----------------------------------------------------------------------------
PROCEDIMIENTO MAYDOS(ENTERO N1, ENTERO N2, VAR ENTERO MAY)
INICIO
	SI(N1 > N2) ENTONCES
		MAY <- N1
	SINO
		MAY <- N2
	FIN SI
FIN




