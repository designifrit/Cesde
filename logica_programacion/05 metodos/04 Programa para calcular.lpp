				LLAMAR NUEVA_LINEA()
				ESCRIBA "                                               digite ENTER para volver al menu"
				LEA DETENER 
			
			4:	LLAMAR LIMPIAR_PANTALLA()
				ESCRIBA "                                PROMEDIO NUMEROS"
				LLAMAR NUEVA_LINEA()
				ESCRIBA "DIGITE LA CANTIDAD DE NUMEROS A PROMEDIAR: "
				LEA N
				SI (N >= 1) ENTONCES 
					SUMA <- SUMANUMEROS(N)
					PROM <- SUMA / N
				SINO
					PROM <- 0
				FIN SI
				LLAMAR NUEVA_LINEA()
				ESCRIBA " EL PROMEDIO ES: ", PROM
				LLAMAR NUEVA_LINEA()
				ESCRIBA "                                               digite ENTER para volver al menu"
				LEA DETENER 
				
			5:	ESCRIBA " GRACIAS POR UTILIZAR NUESTRO SOFTWARE"
				LLAMAR NUEVA_LINEA()
				ESCRIBA "                                               digite ENTER SALIR"
				LEA DETENER 
			
			SINO:ESCRIBA " ESTA OPCIÓN NO ESTÁ DISPONIBLE"
				LLAMAR NUEVA_LINEA()
				ESCRIBA "                                               digite ENTER para volver al menu"
				LEA DETENER 
			
		FIN CASO
		
	HASTA (OP = 5)
FIN	

	




















































