PROCEDIMIENTO TABLA(ENTERO NUM)
	ENTERO J, MUL
INICIO
		PARA J <- 1 HASTA 10 HAGA
			MUL <- J * NUM
			LLAMAR COLOR_TEXTO(J)
			ESCRIBA NUM, " X ", J, " = ", MUL
			LLAMAR NUEVA_LINEA()
			LLAMAR COLOR_TEXTO(15)
		FIN PARA			
FIN 	

PROCEDIMIENTO MAYDOS(ENTERO NUM1, ENTERO NUM2, VAR ENTERO MAYOR)
INICIO
	SI (NUM1 > NUM2) ENTONCES
		MAYOR <- NUM1
	SINO
		MAYOR <- NUM2
	FIN SI
FIN 

