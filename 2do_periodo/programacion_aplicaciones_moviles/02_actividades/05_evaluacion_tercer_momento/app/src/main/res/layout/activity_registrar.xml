    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/cp_blue"
            android:padding="20dp">

            <Button
                android:id="@+id/btBackMain"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/cp_blue"
                android:drawableStart="@drawable/arrow_back"
                android:drawablePadding="10dp"
                android:text="@string/regresar"
                android:textSize="16sp"
                android:fontFamily="@font/archivo_narrow"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:onClick="Regresar"/>

            <TextView
                android:id="@+id/tvDatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btBackMain"
                android:fontFamily="@font/archivo_narrow"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:includeFontPadding="false"
                android:text="@string/por_favor_ingresa_los_datos_del_veh_culo"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilPlaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDatos"
                android:textColorHint="@color/white"
                android:hint="@string/n_mero_de_placa">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etPlaca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/car_number"
                    android:drawablePadding="10sp"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:fontFamily="@font/source_sans_pro"
                    android:inputType="text"
                    android:maxLength="6"
                    android:text="">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

