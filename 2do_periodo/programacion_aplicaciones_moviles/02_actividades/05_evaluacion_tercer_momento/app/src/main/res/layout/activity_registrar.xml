        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="30dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/modelo_del_veh_culo">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etModelo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/coche"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:inputType="text"
                    android:text="">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/marca_del_veh_culo">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etMarca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/brand"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:inputType="text"
                    android:text="">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/precio_del_veh_culo">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/dollar"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:inputType="number"
                    android:maxLength="9"
                    android:text="">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/contrase_a">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etIngPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:inputType="textPassword"
                    android:text="">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/verifica_la_contrase_a">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/etVerPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/password"
                    android:drawablePadding="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:inputType="textPassword"
                    android:text="">

                </android.support.design.widget.TextInputEditText>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btLimpiar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:backgroundTint="@color/cp_blue"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/limpiar_campos"
                android:textColor="@color/grey"
                android:textSize="17sp"
                android:onClick="Limpiar"/>

            <Button
                android:id="@+id/btConsultar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/cp_blue"
                android:fontFamily="@font/archivo_narrow"
                android:text="@string/consultar_placa"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:onClick="Consultar"/>

            <Button
                android:id="@+id/btRegistrarV"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="@color/ca_blue"
                android:fontFamily="@font/archivo_narrow"
                android:text="@string/registrar_veh_culo"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:onClick="Registrar"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>